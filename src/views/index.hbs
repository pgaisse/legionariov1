<div class="container-sm">
  {{#if user}}
  <h3>
    Agregar Contenido
  </h3><br />
  <form class="row g-3" method="POST" action="/add_content" enctype="multipart/form-data">
    <div class="input-group mb-3">

      <input type="file" class="form-control" name="picture" id="picture">
      <label class="input-group-text" for="inputGroupFile02">Upload</label>
    </div>

    <div class="input-group mb-3">
      <select class="form-select" name="type" aria-label="Seleccionar Plantilla">
        <option value="1" selected>Plantilla 1</option>
        <option value="1">plantilla 1</option>
        <option value="2">plantilla 2</option>
        <option value="3">plantilla 3</option>
      </select>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">Título</span>
      <input type="text" class="form-control" name="title" id="name" placeholder="Nombre Producto" aria-label="Nombre"
        aria-describedby="basic-addon1">
    </div>

    <div class="input-group">
      <span class="input-group-text">Contenido</span>
      <textarea class="form-control" name="content" aria-label="With textarea"></textarea>
    </div>

    <div class="input-group">
      <button type="submit" class="btn btn-primary mb-3">Agregar</button>
    </div>


  </form>

  {{/if}}
</div>