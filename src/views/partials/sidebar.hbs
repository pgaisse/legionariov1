<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
<link href="css/sidebar.css" rel="stylesheet" type="text/css">

<div>
    <nav id="sidebar" class="sidebar  flex-column flex-shrink-0 position-relative" style="min-height: 700px; background-color: --bg-color; color: --text-color;">
        <button class="toggle-btn" onclick="toggleSidebar()">
            <i class="fas fa-chevron-right"></i>
        </button>

        <div class="p-4">
            <h4 class="logo-text fw-bold mb-0">Legionario</h4>
            <p class="text-muted small hide-on-collapse">{{user.nombre}}</p>
        </div>

        <div class="nav ">
            <a href="/" class="sidebar-link active text-decoration-none p-3">
                <i class="fas fa-home me-3"></i>
                <span class="hide-on-collapse">Inicio</span>
            </a>
            <a href="/products" class="sidebar-link text-decoration-none p-3">
                <i class="fa-solid fa-microchip"></i>
                <span class="hide-on-collapse">Productos</span>
            </a>

            <a href="/about" class="sidebar-link text-decoration-none p-3">
                <i class="fas fa-box me-3"></i>
                <span class="hide-on-collapse">Nosotros</span>
            </a>
            <a href="/contact" class="sidebar-link text-decoration-none p-3">
                <i class="fa fa-address-book me-3"></i>
                <span class="hide-on-collapse">Contacto</span>
            </a>



        </div>

        <div class="profile-section mt-auto p-4">
            <div class="d-flex align-items-center">
                <img src="assets/logo_l.png" class="logosidebar" style="height:20px" class="rounded-circle"
                    alt="Profile"><br>

            </div>
        </div>
        <div class="nav ">

            {{#if user}}

            <a href="/logout" class="sidebar-link text-decoration-none p-3">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="hide-on-collapse">Salir</span>
            </a>

            <a href="/signup" class="sidebar-link text-decoration-none p-3">
                <i class="fa-solid fa-user-plus"></i>
                <span class="hide-on-collapse">Nuevo Usuario</span>
            </a>
            {{else}}
            <a href="/signin" class="sidebar-link text-decoration-none p-3">
                <i class="fa-solid fa-right-to-bracket"></i>
                <span class="hide-on-collapse">Ingresar</span>
            </a>
        </div>
        {{/if}}

    </nav>


    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</div>