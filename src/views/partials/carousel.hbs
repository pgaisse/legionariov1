{{#if carouselImages}}
<div id="carouselExampleCaptions" class="carousel slide bg-dark" data-bs-ride="carousel">
  <div class="carousel-indicators mb-2">

    {{#each carouselImages}}
    {{#if @index}}
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}"
      aria-label="Slide {{sum @index}}"></button>
    {{else}}
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" class="active"
      aria-current="true" aria-label="Slide {{sum @index}}"></button>
    {{/if}}


    {{/each}}

  </div>
  <div class="carousel-inner">


    {{#each carouselImages}}

    {{#if @index}}
    <div class="carousel-item bg-dark">
      <img src="/img/carousel/{{this.picture}}" class="d-block w-100 mx-auto" alt="{{this.picture}}" />
      <a href="/add_carousel" class="position-absolute text-white fw-bold  " style="right: 370px; top: 8%">
        <i class="fa-solid fa-square-plus"></i>
      </a>
      <a href="/del_carousel?id_carousel={{id_carousel}}" class="position-absolute text-white fw-bold  "
        style="right: 350px; top: 8%">
        <i class="fa-solid fa-square-minus"></i>
      </a>
      <div class="carousel-caption d-none d-md-block">

        <h5>{{this.title}}</h5>
        <p>{{this.text}} </p>

      </div>
    </div>
    {{else}}
    <div class="carousel-item active bg-dark">
      <img src="/img/carousel/{{this.picture}}" class="d-block w-100 mx-auto" alt="{{this.picture}}" />

      <a href="/add_carousel" class="position-absolute text-white fw-bold  " style="right: 370px; top: 8%">
        <i class="fa-solid fa-square-plus"></i>
      </a>
      <a href="/del_carousel?id_carousel={{id_carousel}}" class="position-absolute text-white fw-bold  "
        style="right: 350px; top: 8%">
        <i class="fa-solid fa-square-minus"></i>
      </a>
      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.title}}</h5>
        <p>{{this.text}}
        </p>
      </div>
    </div>
    {{/if}}

    {{/each}}
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>


  </div>


</div>
{{else}}
<a href="/add_carousel" class="position-absolute text-white fw-bold  " style="right: 370px; top: 8%">
  <i class="fa-solid fa-square-plus"></i> Agregar Imagen
</a>
{{/if}}
