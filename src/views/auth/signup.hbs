<div class="container p-6 m-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Agregar Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group m-3 m-2">
              <input type="text" name="user" placeholder="Nombre de Usuario" class="form-control" autofocus>
            </div>

             <div class="form-group m-3">
              <input type="number" name="type" placeholder="Rol" class="form-control" min="1" max="2" step="1" required>
            </div>
            <div class="form-group m-3">
              <input type="text" name="nombre" placeholder="Nombre" class="form-control">
            </div>

            <div class="form-group m-3">
              <input type="email" name="email" placeholder="E-mail" class="form-control">
            </div>
            <div class="form-group m-3">
              <input type="password" id="password" name="password" placeholder="Password" class="form-control"
                onkeyup="checkpassword();" onfocus="checkpassword();">
            </div>
            <div class="form-group m-3">
              <input type="password" id="repassword" name="repassword" placeholder="Confirmar Password"
                class="form-control" onkeyup="checkpassword();" onfocus="checkpassword();">
            </div>
            <div id="cont"></div>
            <div class="form-group m-3">
              <button class="btn btn-success btn-block" >
                Registrar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>